{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Example Schema",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "age": {
      "description": "Age in years",
      "type": "integer",
      "minimum": 0
    },
    "friends": {
      "description": "A list of friends",
      "type": "array",
      "items": {
        "$ref": "friends.json#/definitions/person"
      }
    }
  },
  "required": [
    "firstName",
    "lastName",
    "friends"
  ]
}