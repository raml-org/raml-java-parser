{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "anyOf": [
    {
      "$ref": "#/definitions/cat"
    },
    {
      "$ref": "#/definitions/dog"
    }
  ],
  "definitions": {
    "cat": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "color": {
          "type": "string"
        }
      },
      "required":["name","color"]
    },
    "dog": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "fangs": {
          "type": "string"
        }
      },
      "required":["name","fangs"]
    }
  }
}
